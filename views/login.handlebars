<!doctype html>
<html lang="en">
  <head>
    <!-- bootstrap template from https://getbootstrap.com/docs/4.0/getting-started/introduction/-->
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="login.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="interface.css">

    <title>Login</title>
</head>
<body>
    <div class="container">
        <div class="card m-4">

                <div class="card-header">
                    <legend>Choose User</legend>
                </div>
                <div class="card-body">
                    <div class="table table-hover table-responsive overflow-auto" style="max-height: 300px;">

                    <table id="userTable" class="table table-striped table-sm">
                      <thead>
                        <tr>
                          <th>First Name</th>
                          <th>Last Name</th>
                          <th>Date of Birth</th>
                          <th>Email</th>
                        </tr>
                      </thead>
                      <tbody id="userTableBody">
                        {{#each people}}
                        <tr class="userTableRow">
                            <td style= "display:none;">{{userID}}</td>
                            <td>{{firstName}}</td>
                            <td>{{lastName}}</td>
                            <td>{{birthDate}}</td>
                            <td>{{email}}</td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>

                  </div>
<div class="row md-12">
  <a class="btn btn-outline-primary disabled" href="interface.html" role="button" id="selectUserBtn">Select User</a>
  <form action="/addUserPage" method="get">
    <button type="submit" class="btn btn-outline-primary" id="addUserBtn" role="button">Add New User</a>
    <button onclick="" data-toggle ="modal" data-target="#deleteLogModal" type="button" id="delLogButton" class="btn btn-outline-danger">Delete</button>
  </form>
</div>

                </div><!--card body-->
        </div><!--card 1-->
    </div><!--main container-->


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="loginScripts.js"></script>
  </body>
</html>
